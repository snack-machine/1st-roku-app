<?xml version="1.0" encoding="utf-8" ?>
<component name="MarkupGridItem" extends="Group" >
  <interface> 
    <field id="width" type="integer" onChange="onWidthChanged" />
    <field id="height" type="integer" onChange="onHeightChanged" />
    <field id="index" type="integer" value="-1" onChange="onIndexChanged" />
    <field id="itemContent" type="node" onChange="onContentChanged" />
    <field id="itemHasFocus" type="boolean" onChange="onFocusChanged" />
  </interface>
  <script type = "text/brightscript" uri="MarkupGridItem.brs" />
  <children>
    <Rectangle 
      id="background" 
      opacity="1" />
    <Label
      id="label"
      horizAlign="center"
      vertAlign="center"
      font="font:MediumBoldSystemFont" />
  </children>
</component>
