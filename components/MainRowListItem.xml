<?xml version="1.0" encoding="utf-8" ?>
<component name="MainRowListItem" extends="Group">
  <script type="text/brightscript" uri="MainRowListItem.brs" />
  <interface>
    <field id="width" type="integer" onChange="onWidthChanged" />
    <field id="height" type="integer" onChange="onHeightChanged" />
    <field id="index" type="integer" value="-1" onChange="onIndexChanged" />
    <field id="rowIndex" type="integer" value="-1" onChange="onRowIndexChanged" />
  </interface>
  <children>
    <Rectangle 
      id="background" 
      color="#263238" 
      opacity="0.8" />
    <Label
      id="label"
      color="#FFFFFF"
      wrap="true"
      horizAlign="center"
      vertAlign="center"
      font="font:MediumBoldSystemFont" />
  </children>
</component>
