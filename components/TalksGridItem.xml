<?xml version="1.0" encoding="utf-8" ?>
<component name="TalksGridItem" extends="Group">
  <script type="text/brightscript" uri="TalksGridItem.brs" />
  <interface>
    <field id="width" type="integer" onChange="onWidthChanged" />
    <field id="height" type="integer" onChange="onHeightChanged" />
    <field id="itemContent" type="node" onChange="onContentChanged" />
  </interface>
  <children>
    <Rectangle 
      id="background" 
      color="#263238" 
      opacity="0.8" />
    <Poster
      id="thumbnail" />
    <Label
      id="label"
      color="#FFFFFF"
      height="40"
      wrap="true"
      horizAlign="left"
      vertAlign="top"
      font="font:SmallestSystemFont" />
  </children>
</component>
